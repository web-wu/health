<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tabwu.health.mapper.CheckItemMapper">
    <insert id="addCheckItem" parameterType="com.tabwu.health.entity.CheckItem">
        insert into t_checkitem(code,name,sex,age,price,type,remark,attention)
        values
        (#{code},#{name},#{sex},#{age},#{price},#{type},#{remark},#{attention})
    </insert>

    <select id="queryCheckItemByCondition" parameterType="string" resultType="com.tabwu.health.entity.CheckItem">
        select id,code,name,sex,age,price,type,remark,attention from t_checkitem
            <if test="value != null and value.length > 0">
                where code = #{value} or name = #{value}
            </if>
    </select>

    <delete id="deleteCheckItem" parameterType="int">
        delete from t_checkitem where id = #{id}
    </delete>

    <select id="checkStationCheckItemAndCheckGrop" parameterType="int" resultType="long">
        select count(*) from t_checkgroup_checkitem where checkitem_id = #{checkitem_id}
    </select>

    <update id="updateCheckItem" parameterType="com.tabwu.health.entity.CheckItem">
        update t_checkitem
        <set>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="findAllCheckItem" resultType="com.tabwu.health.entity.CheckItem">
        select id,code,name,remark from t_checkitem
    </select>
</mapper>

