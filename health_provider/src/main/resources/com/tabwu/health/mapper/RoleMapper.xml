<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.tabwu.health.mapper.RoleMapper">

    <select id="getRolesByUserId" resultType="com.tabwu.health.entity.Role" parameterType="int">
        SELECT * FROM t_role r, t_user_role ur WHERE ur.role_id = r.id AND ur.user_id = #{UserId}
    </select>

</mapper>