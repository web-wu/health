<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.tabwu.health.mapper.PermissionMapper">

    <select id="getPermissionByRoleId" resultType="com.tabwu.health.entity.Permission" parameterType="int">
        SELECT * FROM t_permission p, t_role_permission rp WHERE p.id = rp.permission_id AND rp.role_id = #{RoleId}
    </select>

</mapper>